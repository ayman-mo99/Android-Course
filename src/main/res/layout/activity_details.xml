<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activity.DetailsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:id="@+id/det_title"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:id="@+id/det_img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description of the place"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="des"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/det_des"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The location of the place"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="des"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/det_loc"/>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:text="Price is :"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/det_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:text="Type :"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/det_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textColor="@color/black" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:text="Capacity : "
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/det_cap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>